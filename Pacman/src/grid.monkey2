Function RenderGrid(canvas:Canvas)
	' Draw cells
	canvas.Color=Color.LightGrey
	For Local y:Int = 0 Until GridHeight
		For Local x:Int = 0 Until GridWidth
			If (Grid[0,x,y]>0) canvas.DrawImage(Blocks.Item[Grid[0,x,y]],DisplayOffset.X+x*8,DisplayOffset.Y+y*8)
			If (window.IsDebug and Grid[1,x,y]>0) canvas.DrawRect(DisplayOffset.X+x*8,DisplayOffset.Y+y*8,8,8)
			If (Grid[2,x,y]>0) canvas.DrawImage(Blocks.Item[Grid[2,x,y]],DisplayOffset.X+x*8,DisplayOffset.Y+y*8)
			'If (Grid[0,x,y]<>0) canvas.DrawRect(DisplayOffset.X+x*8,DisplayOffset.Y+y*8,8,8)
		Next
	Next
	
	' Draw Grid
	If (window.IsDebug)
		canvas.Color=Color.DarkGrey
		For Local y:Int = 0 To GridHeight
			canvas.DrawLine(DisplayOffset.X,DisplayOffset.Y+y*8,DisplayOffset.X+(GridWidth*8),DisplayOffset.Y+y*8)
		Next
		For Local x:Int = 0 To GridWidth
			canvas.DrawLine(DisplayOffset.X+x*8,DisplayOffset.Y,DisplayOffset.X+x*8,DisplayOffset.Y+(GridHeight*8))
		Next
	End
End

Function TransferToGrid(layer:Int,layout:Int[])
	' Prepare
	Local index:Int=0
	
	' Transfer
	For Local y:Int = 0 Until GridHeight
		For Local x:Int = 0 Until GridWidth
			Grid[layer,x,y]=layout[index]
			index+=1
		Next
	Next
End




